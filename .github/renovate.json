{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/.python-version"
  ],
  "pre-commit": {
    "enabled": true,
    "automerge": true
  },
  "schedule": ["every friday", "before 8am"],
  "packageRules": [
    {
      "groupName": "pre-commit hooks",
      "matchManagers": ["pre-commit"],
      "matchDepTypes": ["repository"],
      "groupSlug": "precommit",
      "labels": ["pre-commit", "dependencies"]
    }
  ]
}
